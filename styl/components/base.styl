/*--------------------------------------------------------------------
*
* BASE
*
--------------------------------------------------------------------*/

*, *:after, *:before
  -moz-box-sizing: border-box
  -webkit-box-sizing: border-box
  box-sizing: border-box

html
  font-size: 100%

body
  font: $font-base/$line-height-base $font-serif
  text-rendering: optimizeLegibility
  -webkit-font-smoothing: antialiased

.cf
  &:before,
  &:after
    content: " "
    display: table

  &:after
    clear: both

a
  cursor: pointer

small
  font-size: $font-small

.pull-left
  float: left

.pull-right
  float: right